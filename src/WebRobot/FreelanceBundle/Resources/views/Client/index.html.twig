{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Client list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('clients_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <div>
                    <a href="{{ path('clients_show', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-primary">show</button>
                    </a>
                    <a href="{{ path('clients_edit', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-success">edit</button>
                    </a>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('clients_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
