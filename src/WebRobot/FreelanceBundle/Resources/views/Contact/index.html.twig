{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contact list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Language</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contacts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fullName }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.language }}</td>
                <td>{{ entity.notes }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contacts_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contacts_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contacts_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
