{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project</h1>

    <a href="{{ path('projects') }}" class="btn btn-default">
        Back to the list
    </a>
    <a href="{{ path('projects_edit', { 'id': entity.id }) }}" class="btn btn-primary">
        Edit
    </a>
    {{ form(delete_form) }}

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Closed</th>
                <td>
                    {% if entity.closed %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
