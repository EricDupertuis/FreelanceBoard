<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    {{ include('WebRobotFreelanceBundle:Default:head.html.twig') }}
</head>
<body>
<div class="login-wrapper">
    <div class="container login-container">
        {% block body %}
            {% trans_default_domain 'FOSUserBundle' %}

            {% block fos_user_content %}
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" class="form-control" id="password" name="_password" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <button class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />Submit</button>
                </form>
            {% endblock fos_user_content %}
        {% endblock %}
    </div>
</div>

{% block footer %}
    {% javascripts
    "@WebRobotFreelanceBundle/Resources/public/vendor/jquery/dist/jquery.min.js"
    "@WebRobotFreelanceBundle/Resources/public/vendor/bootstrap/dist/js/bootstrap.min.js"
    "@WebRobotFreelanceBundle/Resources/public/vendor/datatables/media/js/jquery.dataTables.min.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $('table').dataTable();
    </script>
{% endblock %}
</body>
</html>